<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    app:rowCount="4"
    tools:context="org.pcrbrandao.tipcalculator.MainActivity">

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/enter_amout"
        android:digits="0123456789"
        android:ems="10"
        android:inputType="number"
        android:maxLength="6"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_row="0"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:background="@color/amount_background"
        android:elevation="@dimen/elevation"
        android:gravity="fill_horizontal"
        android:hint="@string/enter_amout"
        android:padding="@dimen/textview_padding"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_row="0"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/percentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:hint="@string/tip_percent"
        app:layout_gravity="right|center_vertical"
        tools:ignore="HardcodedText" />

    <SeekBar
        android:id="@+id/percentSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seekbar_height"
        android:max="30"
        android:progress="15"
        app:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/tipLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:hint="@string/tip"
        app:layout_gravity="right"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:background="@color/result_background"
        android:elevation="@dimen/elevation"
        android:gravity="center"
        android:hint="@string/tip"
        android:padding="@dimen/textview_padding"
        app:layout_gravity="fill_horizontal"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/totalLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:hint="@string/total"
        app:layout_gravity="right"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:background="@color/result_background"
        android:elevation="@dimen/elevation"
        android:gravity="center"
        android:hint="@string/total"
        android:padding="@dimen/textview_padding"
        app:layout_gravity="fill_horizontal"
        tools:ignore="HardcodedText" />

</GridLayout>
